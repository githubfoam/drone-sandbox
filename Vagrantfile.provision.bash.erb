KUMA_VERSION = "0.7.1"
KUMA_HOME    = "/opt/kuma"

KUMA_CONTROL_PLANE_IP      = "192.168.33.10"

Vagrant.configure("2") do |config|

  config.vm.provider "virtualbox" do |v|
    v.memory = 4096
    v.cpus = 1
  end

  config.vm.define "vg-droneci" do |node| 
    node.vm.box = "centos/8"
    node.vm.hostname = "vg-droneci"
    node.vm.network :private_network, ip: DRONECI_IP
  end

end 